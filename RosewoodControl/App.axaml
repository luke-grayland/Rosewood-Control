<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RosewoodControl.App"
             xmlns:local="using:RosewoodControl"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Views/Components/SpeakerControl.axaml"></StyleInclude>
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="StatusActive">Green</SolidColorBrush>
        <SolidColorBrush x:Key="StatusBlown">DarkRed</SolidColorBrush>
        <SolidColorBrush x:Key="StatusOffline">Gray</SolidColorBrush>
    </Application.Resources>
         
</Application>